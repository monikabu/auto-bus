<%= form_for @trail do |f| %>
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Trail Name</label>
      <div class="col-sm-10">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Start Point City</label>
      <div class="col-sm-10">
        <%= f.text_field :start_point_city %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Start Point Street</label>
      <div class="col-sm-10">
        <%= f.text_field :start_point_street %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Start Point Street Number</label>
      <div class="col-sm-10">
        <%= f.text_field :start_point_number %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">End Point City</label>
      <div class="col-sm-10">
        <%= f.text_field :end_point_city %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">End Point Street</label>
      <div class="col-sm-10">
        <%= f.text_field :end_point_street %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">End Point Number</label>
      <div class="col-sm-10">
        <%= f.text_field :end_point_number %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Save</button>
      </div>
    </div>
  </form>
<% end %>
